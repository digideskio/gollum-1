# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
ident_style = space

# js files
[*.{js}]
ident_style = space
ident_size = 4

# json files
[*.{json}]
indent_style = space
indent_size = 2
